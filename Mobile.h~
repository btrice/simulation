#ifndef MOBILE_H
#define MOBILE_H
#include<string>
#include "Vecteur3D.h"
class Mobile{
	std::string nom;
	Vecteur3D position;
	Vecteur3D vitesse;
	int mode;
public:	
	Mobile(const std::string& _n,int _i=-100);
	void avance(double dt);
	std::string& get_nom();
	void set_nom(std::string& _n);
	Vecteur3D& get_position();
	void set_position(Vecteur3D& _p);
	Vecteur3D& get_vitesse();
	void set_vitesse(Vecteur3D& _v);
	void affichage();
	int get_mode();
	Vecteur3D get_G(const Vecteur3D& x, const Vecteur3D& v) const
	virtual Mobile* copie();
	Mobile(const Mobile& m);
	~Mobile();
};
#endif
